{
   "manifest_version": 2,
   "web_accessible_resources": [
    "48.png"
  ],
   "browser_action": {
      "default_icon": "icon.png",
      "default_title": "Go to Alerts"
   },
   "description": "Get Bukkit Alerts",
   "icons": {
      "128": "128.png",
      "16": "16.png",
      "48": "48.png"
   },

   "name": "BukkitAlert",
   "options_page": "options.html",
   "permissions": [ 
      "tabs", 
      "http://*/",
      "notifications"
   ],
 "background": {
    "scripts": ["background.js"]
  },   "version": "1.0"
}
